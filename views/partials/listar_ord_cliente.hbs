{{#if ordenesDisponibles}}
{{#each ordenesDisponibles}}

<div class="col-md-12  bg-primary bg-gradient rounded-3 p-1 " style="--bs-bg-opacity: .2;">
    <h5
        class=" d-flex justify-content-between align-items-center px-3  mb-1 text-light bg-primary bg-gradient rounded-2">
        <span>{{@key}}</span>
    </h5>

    <div class="list-group">
        {{#each this}}

        <a href="/?a=view&orden={{this.id}}" class="list-group-item list-group-item-action {{this.class}}"
            aria-current="true">
            <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">{{this.nombre}}</h6>
                <small class="badge text-primary">{{fromNow this.timestamp}}</small>
                <span
                    class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary border border-light ">
                    {{this.cantidad}}
                </span>

            </div>
            <p class="mb-1">{{this.descripcion}}</p>
        </a>
        {{/each}}
    </div>
</div>
{{/each}}

{{/if}}